@model TpNoteDesignPatternsCSharp.WEB.Models.PersonnageViewModel
@{
    ViewData["Title"] = "Page personnage";
}

<div class="text-center">

    <div class="text-gray-900 font-bold text-xl mb-2">@Model.Name</div>
    <p class="text-gray-700 text-base">Sexe : @Model.Sexe <br /> Race: @Model.Race </p>

    <div class="font-bold text-xl mb-2">Equipement</div>

    <div class="px-4 py-3 bg-gray-50 sm:px-6">
        <a href="/Personnage/AddEquipement/@Model.Personnage.Id" class="inline-flex justify-center bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            Crée
        </a>
    </div>

    <div id="grid">
        @await Html.PartialAsync("_EquipementGrid", Model.Personnage.Equipements)
    </div>

</div>